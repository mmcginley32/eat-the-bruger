<div class="container">
  <div class="jumbotron">
  <h1 class="text-center">EAT DA BURGER</h1>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <h3>Which Burger would you like to eat?</h3>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <p>{{burger_name}}
            <button type="submit" class="btn btn-outline-secondary devour" data-id="{{id}}">Devour</button>
          </p>
          {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-sm-6">
      <h3>Eaten Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <p>{{burger_name}}</p>

        {{/if}}
        {{/each}}
      </ul>
    </div>

  <div class="row">
    <div class="center col-sm-12">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="createburger" name="name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>
      <p> enter in a burger you would like to eat!</p>
    </div>
  </div>
</div>
